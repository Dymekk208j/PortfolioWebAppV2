@model PortfolioWebAppV2.Models.ViewModels.ContactViewModel

<section style="background: white;">
    <div class="container">
        <div class="card mb-3" style="margin-bottom:2em; margin-top:2em;">
            <div class="card-body">
                <div class="media-body">
                    <p style="text-indent: 2%;">
                        <h3 class="mb-0">Dane kontaktowe: </h3>

                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            @Html.LabelFor(m => m.PhoneNumber, new { style = "font-weight: bold; Margin-top: 10px;" })
                            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        }

                        @if (!string.IsNullOrEmpty(Model.Email1))
                        {
                            @Html.LabelFor(m => m.Email1, new { style = "font-weight: bold; Margin-top: 10px;" })
                            @Html.EditorFor(m => m.Email1, new { htmlAttributes = new { @class = "form-control" }, })
                        }

                        @if (!string.IsNullOrEmpty(Model.Email2))
                        {
                            @Html.LabelFor(m => m.Email2, new { style = "font-weight: bold; Margin-top: 10px;" })
                            @Html.EditorFor(m => m.Email2, new { htmlAttributes = new { @class = "form-control" }, })
                        }

                        @if (!string.IsNullOrEmpty(Model.FacebookLink))
                        {
                            @Html.LabelFor(m => m.FacebookLink, new { style = "font-weight: bold; Margin-top: 10px;" })
                            @Html.EditorFor(m => m.FacebookLink, new { htmlAttributes = new { @class = "form-control" }, })
                        }

                        @if (!string.IsNullOrEmpty(Model.LinkedInLink))
                        {
                            @Html.LabelFor(m => m.LinkedInLink, new { style = "font-weight: bold; Margin-top: 10px;" })
                            @Html.EditorFor(m => m.LinkedInLink, new { htmlAttributes = new { @class = "form-control" }, })
                        }

                        @if (!string.IsNullOrEmpty(Model.GitHubLink))
                        {
                            @Html.LabelFor(m => m.GitHubLink, new { style = "font-weight: bold; Margin-top: 10px;" })
                            @Html.EditorFor(m => m.GitHubLink, new { htmlAttributes = new { @class = "form-control" }, })
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

