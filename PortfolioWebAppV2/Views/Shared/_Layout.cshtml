<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Damian Dziura - Portfolio</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Lib/Styles/default.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
    <section class="menu">
        <div class="container-fluid ">
            <div class="row">
                <div class="col">
                   @Html.Action("GetSocialMediaBarPartial", "Home")
                </div>

                <div class="col">
                    <div class="btn-group float-right">
                        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Index", "Home")';return false;">Strona główna</button>
                        <button type="button" class="btn btn-outline-secondary d-none d-lg-block" onclick="">Projekty</button>
                        <button type="button" class="btn btn-outline-secondary d-none d-lg-block" onclick="location.href='@Url.Action("AboutMe", "Home")';return false;">O mnie</button>
                        <button type="button" class="btn btn-outline-secondary d-none d-lg-block" onclick="">CV</button>
                        <button type="button" class="btn btn-outline-secondary d-none d-lg-block" onclick="location.href='@Url.Action("Contact", "Home")';return false;">Kontakt</button>
                        @if (User.IsInRole("Admin"))
                        {
                            <button type="button" class="btn btn-outline-secondary d-none d-lg-block" onclick="">Panel administratora</button>
                        }
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()

                                <button type="submit" class="btn btn-danger">Wyloguj</button>
                            }
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-secondary" data-toggle="collapse" data-target="#LoginPanel">Logowanie</button>
                        }

                        @{

                            //todo: nie dziala rozwijane menu na zbyt malym ekranie
                        }

                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-secondary d-lg-none dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-bars"></span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="">Projekty</a>
                                <a class="dropdown-item" href="location.href='@Url.Action("AboutMe", "Home")';return false;">O mnie</a>
                                <a class="dropdown-item" href="">CV</a>
                                <a class="dropdown-item" href="location.href='@Url.Action("Contact", "Home")';return false;">Kontakt</a>
                                

                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="dropdown-item" href="">Panel administratora</a>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                @(!Request.IsAuthenticated ? Html.Partial("_LoginPanelPartial", new PortfolioWebAppV2.Models.ViewModels.LoginViewModel()) : Html.Partial("_LogedPanelPartial"))
            </div>


        </div>
    </section>

    <section class="headers">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 title">
                    <h2>Damian Dziura</h2>
                    <span class="byline">Portfolio</span>
                </div>
            </div>
        </div>
    </section>


    @RenderBody()


    <section class="myfooter">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <p>Damian Dziura 2018. All rights reserved.</p>
                </div>
            </div>

        </div>
    </section>



</body>
</html>