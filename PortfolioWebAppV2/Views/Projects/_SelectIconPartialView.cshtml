@model  IEnumerable<PortfolioWebAppV2.Models.DatabaseModels.Image>
    
<div class="modal fade" id="SelectIcon" tabindex="-1" role="dialog" aria-labelledby="SelectIconLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="SelectIconLabel">Wybierz ikonę</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="main-content-inner">
                    <div class="row">
                        @if (Model != null)
                        {
                            foreach (var image in Model)
                            {

                                <div class="card card-bordered m-1 iconCard" style="width: 160px; ">
                                    <div class="card-header p-0 m-0 text-center">@Html.Name(image.FileName)</div>
                                    <div class="card-body p-1 align-content-center">

                                        <img src="@Html.Raw(image.GetLink())" class="image" alt="Image" />
                                        <div class="middle">
                                            <a href="#">
                                                <img src="~/Lib/assets/images/icon/AcceptIcon.png" alt="AcceptIcon" onclick="selectIcon(@image.ImageId);" data-dismiss="modal"/>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                        else
                        {
                            <h3>Brak elementów do wyświetlenia</h3>
                        }
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Anuluj</button>
            </div>
        </div>
    </div>
</div>