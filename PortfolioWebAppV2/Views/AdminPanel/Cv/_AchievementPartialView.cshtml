@model PortfolioWebAppV2.Models.DatabaseModels.Achievement


<div id="@Html.Raw("AchievementDiv" + Model.AchievementId.ToString())">
    <div id="@Html.Raw("AchievementDivBtn" + Model.AchievementId.ToString())" style="display: none;">
        <button type="button" class="btn btn-outline-danger button-xs far fa-minus-square" onclick="location.href = '@Url.Action("RemoveAchievementFromCv", "AdminPanel", new { id = Model.AchievementId })';return false;"></button>

    </div>
    <p>
        <b>@Html.Name(Model.Title)</b><br />
        <i>@Html.Name(Model.Date.GetValueOrDefault().ToShortDateString()))</i><br />
        @Html.Name(Model.Description)
    </p>
</div>


<script language="Javascript">
    $('@Html.Raw("#AchievementDiv" + Model.AchievementId.ToString())').mouseenter(function () {
        $('@Html.Raw("#AchievementDivBtn" + Model.AchievementId.ToString())').show();
        $('@Html.Raw("#AchievementDiv" + Model.AchievementId.ToString())').css("background", "#f5f5f0");
    });
    $('@Html.Raw("#AchievementDiv" + Model.AchievementId.ToString())').mouseleave(function () {
        $('@Html.Raw("#AchievementDivBtn" + Model.AchievementId.ToString())').hide();
        $('@Html.Raw("#AchievementDiv" + Model.AchievementId.ToString())').css("background", "none");
    });
</script>