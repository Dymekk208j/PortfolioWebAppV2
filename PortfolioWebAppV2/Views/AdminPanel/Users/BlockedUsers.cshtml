@using AutoMapper
@using PortfolioWebAppV2.Models.DatabaseModels
@using PortfolioWebAppV2.Models.ViewModels
@model List<PortfolioWebAppV2.Models.DatabaseModels.ApplicationUser>
@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

@section Header{ Lista zablokowanych użytkowników }


<!-- data table start -->
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <div class="
                 ">
                <table id="dataTable" class="text-center hover">
                    <thead class="bg-light text-capitalize ">
                        <tr>
                            <th>Login</th>
                            <th>E-mail</th>
                            <th>Imię</th>
                            <th>Nazwisko</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ApplicationUser u in Model)
                        {
                            @Html.Partial("Users/_UserListPartialView", u)
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@foreach (ApplicationUser u in Model)
{
    UpdateViewModel z = Mapper.Map<ApplicationUser, UpdateViewModel>(u);

    @Html.Partial("users/_UserEditPartial", z)
}