@model PortfolioWebAppV2.Models.ViewModels.AboutMeViewModel

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

@section Header{ Edycja strony <i>O mnie</i> }

@{
    using (Html.BeginForm("Update", "AboutMe", FormMethod.Post, new { onsubmit = "return confirm('Czy na pewno chcesz podmienić opis \"O mnie\"?');" }))

    {

        @Html.ValidationMessageFor(model => model.Title, "*", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Title, new { htmlAttributes = new { @class = "control-label" }, })
        @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" }, })
        <br />

        @Html.ValidationMessageFor(model => model.ImageLink, "*", new { @class = "text-danger" })
        @Html.LabelFor(m => m.ImageLink, new { htmlAttributes = new { @class = "control-label" }, })
        @Html.EditorFor(m => m.ImageLink, new { htmlAttributes = new { @class = "form-control" }, })
        <br />

        @Html.ValidationMessageFor(model => model.Text, "*", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Text, new { htmlAttributes = new { @class = "control-label" }, })
        @Html.TextAreaFor(model => model.Text, new { @class = "form-control", style = "width:100%; height: 400px;" })

        <br />

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })


        <input type="submit" onCl class="btn btn-primary float-sm-right" value="Aktualizuj dane">

    }
}
