@model PortfolioWebAppV2.Models.DatabaseModels.EmploymentHistory


<div id="@Html.Raw("EmploymentHistoryDiv" + Model.EmploymentHistoryId.ToString())">
    <div id="@Html.Raw("EmploymentHistoryDivBtn" + Model.EmploymentHistoryId.ToString())" style="display: none;">
        <button type="button" class="btn btn-outline-danger button-xs far fa-minus-square" onclick="location.href='@Url.Action("RemoveEmploymentHistroyFromCv", "AdminPanel", new { id = Model.EmploymentHistoryId })';return false;"></button>

    </div>
    <p>
        <span>
            <b>
                @Html.Name(Model.Position + ", ")
                @Html.Name(Model.CompanyName + ", ")
                @Html.Name(Model.CityOfEmployment)
            </b>
        </span>
        <br />
        <span>
            <i>
                @Html.Name(Model.StartDate.ToShortDateString() + " - ")
                @if (Model.CurrentPlaceOfEmployment)
                {
                    <text>Obecnie</text>
                }
                else
                {
                    @Html.Name(Model.EndDate.ToShortDateString())

                }
            </i>
        </span>
    </p>
</div>


<script language="Javascript">
                $('@Html.Raw("#EmploymentHistoryDiv" + Model.EmploymentHistoryId.ToString())').mouseenter(function () {
                    $('@Html.Raw("#EmploymentHistoryDivBtn" + Model.EmploymentHistoryId.ToString())').show();
                    $('@Html.Raw("#EmploymentHistoryDiv" + Model.EmploymentHistoryId.ToString())').css("background", "#f5f5f0");
    });
    $('@Html.Raw("#EmploymentHistoryDiv" + Model.EmploymentHistoryId.ToString())').mouseleave(function () {
        $('@Html.Raw("#EmploymentHistoryDivBtn" + Model.EmploymentHistoryId.ToString())').hide();
        $('@Html.Raw("#EmploymentHistoryDiv" + Model.EmploymentHistoryId.ToString())').css("background", "none");
                });
</script>
